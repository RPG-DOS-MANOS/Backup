    {{#if @root.usePercentage}}
        <input type="hidden" name="formula" value="{{data.formula}}" placeholder="{{localize 'Roll Formula'}}"/>
    {{else}}
        <div class="form-group">
            <label>{{ localize "TABLE.Formula" }}</label>
            <input type="text" name="formula" value="{{data.formula}}" placeholder="{{localize 'Roll Formula'}}"/>
        </div>
    {{/if}}

    <div class="form-group">
        <label>{{ localize "TABLE.Replacement" }}</label>
        <input type="checkbox" name="replacement" {{checked data.replacement}}/>
    </div>

    <div class="form-group">
        <label>{{ localize "TABLE.DisplayRoll" }}</label>
        <input type="checkbox" name="displayRoll" {{checked data.displayRoll}}/>
    </div>
    <!-- REMOVED 2024-03-25
    <fieldset>
        <legend>{{localize "better-rolltables.label.redFlagNoteTitle"}}</legend>
        <p class="notes">{{ localize "better-rolltables.label.redFlagNote1Hint"}}</p>
        <p class="notes">{{ localize "better-rolltables.label.redFlagNote2Hint"}}</p>
        <p class="notes">{{ localize "better-rolltables.label.redFlagNote3Hint"}}</p>
    </fieldset>
