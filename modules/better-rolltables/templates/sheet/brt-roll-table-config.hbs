    <!-- Roll Table Results Loop -->
    <section class="results">
        <table class="table-results">
            <thead>
                <tr class="table-result table-header flexrow">
                    <th class="result-image">
                        <a class="create-result" title="{{ localize "TABLE.ResultCreate" }}">
                            <i class="fas fa-plus"></i>
                        </a>
                    </th>

                    <th class="result-type" data-tooltip="{{localize 'better-rolltables.label.resultTypeHeaderHint'}}" data-tooltip-direction="UP">
                        <label>{{ localize "TABLE.ResultType" }}</label>
                    </th>

                    <th class="result-details" data-tooltip="{{localize 'better-rolltables.label.resultDetailsHeaderHint'}}" data-tooltip-direction="UP">
                        <label>{{ localize "TABLE.ResultDetails" }}</label>
                    </th>

                    <th class="result-brt-quantity-formula" data-tooltip="{{localize 'better-rolltables.label.resultQuantityHeaderHint'}}" data-tooltip-direction="UP">
                        <label>{{ localize "better-rolltables.label.quantityFormula" }}</label>
                    </th>

                    {{#if (eq @root.tableType "harvest")}}

                    {{#if @root.useDynamicDc}}
                    <th class="result-brt-result-dynamic-dc-value" data-tooltip="{{localize 'better-rolltables.label.resultUseDynamicDcHeaderHint'}}" data-tooltip-direction="UP">
                        <label>{{ localize "better-rolltables.label.useDynamicDc" }}</label>
                    </th>
                    {{else}}
                    <th class="result-brt-dc-value" data-tooltip="{{localize 'better-rolltables.label.resultDcHeaderHint'}}" data-tooltip-direction="UP">
                        <label>{{ localize "better-rolltables.label.dc" }}</label>
                    </th>
                    <th class="result-brt-skill-value" data-tooltip="{{localize 'better-rolltables.label.resultSkillHeaderHint'}}" data-tooltip-direction="UP">
                        <label>{{ localize "better-rolltables.label.skill" }}</label>
                    </th>
                    {{/if}}

                    {{/if}}

                    {{#if @root.usePercentage}}
                        <th class="result-brt-use-percentage-value" data-tooltip="{{localize 'better-rolltables.label.resultUsePercentageHeaderHint'}}" data-tooltip-direction="UP">
                            <label>{{ localize "better-rolltables.label.usePercentageOnlyMax" }}</label>
                        </th>
                    {{else}}

                        <th class="result-weight" data-tooltip="{{localize 'better-rolltables.label.resultWeightHeaderHint'}}" data-tooltip-direction="UP">
                            <label>{{ localize "TABLE.ResultWeight" }}</label>
                        </th>

                        <th class="result-range" data-tooltip="{{localize 'better-rolltables.label.resultRangeHeaderHint'}}" data-tooltip-direction="UP">
                            <label>{{ localize "TABLE.ResultRange" }}</label>
                        </th>
                    {{/if}}

                    {{#if @root.owner}}
                    <th class="result-controls result-brt-controls-header">
                        <a class="normalize-results" title="{{ localize "TABLE.Normalize" }}" data-tooltip="{{localize 'better-rolltables.label.Normalize'}}" data-tooltip-direction="UP">
                            <i class="fas fa-balance-scale fa-fw"></i>
                        </a>
                        <a class='normalize-weights' data-tooltip='{{localize 'better-rolltables.label.NormalizeWeights'}}' data-tooltip-direction='UP'>
                            <i class='fa-solid fa-weight-scale fa-fw'></i>
                        </a>
                        <a class='normalize-results' data-tooltip='{{localize 'better-rolltables.label.NormalizeRanges'}}' data-tooltip-direction='UP'>
                            <i class='fa-solid fa-sliders fa-fw'></i>
                        </a>
                    </th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each results as |result i|}}

                {{#if result.isText}}
                <tr class="table-result flexrow {{#if result.drawn}}drawn{{/if}}" data-result-id="{{result._id}}" data-result-uuid="{{result.uuid}}">
                {{else if result.isDocument}}
                <tr class="table-result flexrow {{#if result.drawn}}drawn{{/if}}" data-result-id="{{result._id}}" data-result-uuid="{{result.uuid}}" data-result-uuiddoc="{{result.uuidDoc}}"
                    {{#brt-isEmpty result.uuidDoc}} style="background: lightcoral;"{{/brt-isEmpty}}>
                {{else if result.isCompendium}}
                <tr class="table-result flexrow {{#if result.drawn}}drawn{{/if}}" data-result-id="{{result._id}}" data-result-uuid="{{result.uuid}}" data-result-uuiddoc="{{result.uuidDoc}}"
                    {{#brt-isEmpty result.uuidDoc}} style="background: lightcoral;"{{/brt-isEmpty}}>
                {{/if}}

                <input type="hidden" name="results.{{i}}._id" value="{{result._id}}"/>

                {{#if result.isText}}
                    <input type="hidden"
                        name="results.{{i}}.flags.better-rolltables.brt-result-uuid"
                        value=""/>
                {{else if result.isDocument}}
                    <input type="hidden"
                        name="results.{{i}}.flags.better-rolltables.brt-result-uuid"
                        value="{{result.flags.better-rolltables.brt-result-uuid}}"/>
                {{else if result.isCompendium}}
                    <input type="hidden"
                        name="results.{{i}}.flags.better-rolltables.brt-result-uuid"
                        value="{{result.flags.better-rolltables.brt-result-uuid}}"/>
                {{/if}}

                <td class="result-image">
                    <img src="{{result.img}}" data-edit="results.{{i}}.img" width="32" height="32"/>
                    <input type="hidden"
                        name="results.{{i}}.flags.better-rolltables.brt-result-custom-icon"
                        value="{{result.flags.better-rolltables.brt-result-custom-icon}}"/>
                </td>

                <td class="result-type">
                    <select name="results.{{i}}.type" data-dtype="Number">
                        {{#select result.type}}
                        {{#each ../resultTypes as |title type|}}
                        <option value="{{type}}">{{title}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>

                <td class="result-details">
					<input type="hidden" name="results.{{i}}.documentId" value="{{result.documentId}}"/>

                    {{#if result.isText}}
                        <input type="text" name="results.{{i}}.text" value="{{result.text}}" placeholder="{{localize 'TABLE.ResultDescription'}}"/>
                        <!-- START MOD ADD 4535992 -->
                        <!-- TODO ??
                        <input class="result-brt-custom-name" type="hidden"
                                name="results.{{i}}.documentCollection"
                                value="result.documentCollection" />
                        <input class="result-brt-custom-name" type="hidden"
                                name="results.{{i}}.flags.better-rolltables.brt-result-journal-page-uuid"
                                value="{{result.flags.better-rolltables.brt-result-journal-page-uuid}}" />
                        <input class="result-brt-custom-name" type="hidden" type="hidden"
                            name="results.{{i}}.flags.better-rolltables.brt-result-custom-name"
                            value="{{result.flags.better-rolltables.brt-result-custom-name}}" />
                        -->
                        <!-- END MOD ADD 4535992 -->
                    {{else if result.isDocument}}
                        <select name="results.{{i}}.documentCollection">
                            {{#select result.documentCollection}}
                            {{#each @root.documentTypes}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                            {{/select}}
                        </select>
                        <input class="result-target" name="results.{{i}}.text" type="hidden" value="{{result.text}}"/>

                        {{#if result.isJournal}}
                            <input style="width:28%" class="result-brt-custom-name" type="text"
                                name="results.{{i}}.flags.better-rolltables.brt-result-custom-name"
                                value="{{result.flags.better-rolltables.brt-result-custom-name}}" />
                            <select class="result-details-journal-page-id" style="width:28%" name="results.{{i}}.flags.better-rolltables.brt-result-journal-page-uuid">
                                {{#select result.flags.better-rolltables.brt-result-journal-page-uuid}}
                                {{#each result.journalPages}}
                                <option value="{{this.uuid}}">{{this.name}}</option>
                                {{/each}}
                                {{/select}}
                            </select>
                        {{else}}
                            <input class="result-brt-custom-name" type="hidden"
                                name="results.{{i}}.flags.better-rolltables.brt-result-journal-page-uuid"
                                value="" />
                            <input class="result-brt-custom-name" type="text"
                                name="results.{{i}}.flags.better-rolltables.brt-result-custom-name"
                                value="{{result.flags.better-rolltables.brt-result-custom-name}}" />
                        {{/if}}

                    {{else if result.isCompendium}}
                        <select name="results.{{i}}.documentCollection">
                            {{#select result.documentCollection}}
                            {{#each @root.compendiumPacks}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                            {{/select}}
                        </select>
                        <input class="result-target" name="results.{{i}}.text" type="hidden" value="{{result.text}}"/>
                        <input class="result-brt-custom-name" type="text"
                            type="text"
                            name="results.{{i}}.flags.better-rolltables.brt-result-custom-name"
                            value="{{result.flags.better-rolltables.brt-result-custom-name}}" />
                    {{/if}}
				</td>

                <td class="result-brt-quantity-formula">
					{{#if result.isStackable}}
                        <input {{#brt-isEmpty result.flags.better-rolltables.brt-result-custom-quantity}} style="background: lightcoral;"{{/brt-isEmpty}}
                            class="result-better-rolltables-formula"
                            type="text"
                            name="results.{{i}}.flags.better-rolltables.brt-result-custom-quantity"
                            value="{{result.flags.better-rolltables.brt-result-custom-quantity}}"
                            placeholder="1"
                            data-dtype="String"
                        />
                    {{else}}
                        <input class="result-better-rolltables-formula"
                            type="hidden"
                            name="results.{{i}}.flags.better-rolltables.brt-result-custom-quantity"
                            value="{{result.flags.better-rolltables.brt-result-custom-quantity}}"
                            placeholder="1"
                            data-dtype="String"
                        />
                    {{/if}}
                    <!--
					{{#if result.isText}}
                        <input class="result-better-rolltables-formula"
                            type="hidden"
                            name="results.{{i}}.flags.better-rolltables.brt-result-custom-quantity"
                            value="{{result.flags.better-rolltables.brt-result-custom-quantity}}"
                            placeholder="1"
                            data-dtype="String"
                        />
					{{else if result.isDocument}}
                        <input {{#brt-isEmpty result.flags.better-rolltables.brt-result-custom-quantity}} style="background: lightcoral;"{{/brt-isEmpty}}
                            class="result-better-rolltables-formula"
                            type="text"
                            name="results.{{i}}.flags.better-rolltables.brt-result-custom-quantity"
                            value="{{result.flags.better-rolltables.brt-result-custom-quantity}}"
                            placeholder="1"
                            data-dtype="String"
                            />
					{{else if result.isCompendium}}
                        <input {{#brt-isEmpty result.flags.better-rolltables.brt-result-custom-quantity}} style="background: lightcoral;"{{/brt-isEmpty}}
                            class="result-better-rolltables-formula"
                            type="text"
                            name="results.{{i}}.flags.better-rolltables.brt-result-custom-quantity"
                            value="{{result.flags.better-rolltables.brt-result-custom-quantity}}"
                            placeholder="1"
                            data-dtype="String"
                            />
					{{/if}}
                    -->
                </td>

                {{#if (eq @root.tableType "harvest")}}

                    {{#if @root.useDynamicDc}}
                    <td class="result-brt-result-dynamic-dc-value">
                        <input {{#brt-isEmpty result.flags.better-rolltables.brt-result-dynamic-dc-value}} style="background: lightcoral;"{{/brt-isEmpty}} class="result-brt-result-dynamic-dc-value" type="text" name="results.{{i}}.flags.better-rolltables.brt-result-dynamic-dc-value" value="{{result.flags.better-rolltables.brt-result-dynamic-dc-value}}" placeholder="nat=1d20, arc=23" data-dtype="String"/>
                    </td>
                    <input class="result-brt-dc-value" type="hidden" name="results.{{i}}.flags.better-rolltables.brt-dc-value" value="{{result.flags.better-rolltables.brt-dc-value}}" placeholder="0" data-dtype="Number"/>
                    <input class="result-brt-skill-value" type="hidden" name="results.{{i}}.flags.better-rolltables.brt-skill-value" value="{{result.flags.better-rolltables.brt-skill-value}}" placeholder="arc" />
                    {{else}}
                    <input class="result-brt-result-dynamic-dc-value" type="hidden" name="results.{{i}}.flags.better-rolltables.brt-result-dynamic-dc-value" value="{{result.flags.better-rolltables.brt-result-dynamic-dc-value}}" data-dtype="String"/>
                    <td class="result-brt-dc-value">
                        <input {{#brt-isEmpty result.flags.better-rolltables.brt-dc-value}} style="background: lightcoral;"{{/brt-isEmpty}} class="result-brt-dc-value" type="number" min="0" name="results.{{i}}.flags.better-rolltables.brt-dc-value" value="{{result.flags.better-rolltables.brt-dc-value}}" placeholder="0" data-dtype="Number"/>
                    </td>
                    <td class="result-brt-skill-value">
                        <input {{#brt-isEmpty result.flags.better-rolltables.brt-skill-value}} style="background: lightcoral;"{{/brt-isEmpty}} class="result-brt-skill-value" type="text" name="results.{{i}}.flags.better-rolltables.brt-skill-value" value="{{result.flags.better-rolltables.brt-skill-value}}" placeholder="arc" />
                    </td>
                    {{/if}}

                {{else}}
                    <input class="result-brt-result-dynamic-dc-value" type="hidden" name="results.{{i}}.flags.better-rolltables.brt-result-dynamic-dc-value" value="{{result.flags.better-rolltables.brt-result-dynamic-dc-value}}" data-dtype="String"/>
                    <input class="result-brt-dc-value" type="hidden" name="results.{{i}}.flags.better-rolltables.brt-dc-value" value="{{result.flags.better-rolltables.brt-dc-value}}" placeholder="0" data-dtype="Number"/>
                    <input class="result-brt-skill-value" type="hidden" name="results.{{i}}.flags.better-rolltables.brt-skill-value" value="{{result.flags.better-rolltables.brt-skill-value}}" placeholder="arc" />
                {{/if}}

                {{#if @root.usePercentage}}
                    <input type="hidden" name="results.{{i}}.weight" value="{{result.weight}}" placeholder="1" data-dtype="Number"/>
                    <td class="result-range">
                        <input type="hidden" name="results.{{i}}.rangeL" value="{{result.range.[0]}}" placeholder="L" data-dtype="Number"/>
                        <input {{#brt-isEmpty result.flags.better-rolltables.brt-percentage-high-value}} style="background: lightcoral;"{{/brt-isEmpty}} type="number" min="0" max="100" step="0.1" name="results.{{i}}.flags.better-rolltables.brt-percentage-high-value" value="{{result.flags.better-rolltables.brt-percentage-high-value}}" placeholder="100" data-dtype="Number"/>  %
                        <input type="hidden" name="results.{{i}}.rangeH" value="{{result.range.[1]}}" placeholder="H" data-dtype="Number"/>
                    </td>
                {{else}}
                    <td class="result-weight">
                        <input type="text" name="results.{{i}}.weight" value="{{result.weight}}" placeholder="1" data-dtype="Number"/>
                    </td>

                    <td class="result-range">
                        <input type="text" name="results.{{i}}.rangeL" value="{{result.range.[0]}}" placeholder="L" data-dtype="Number"/>
                        <span> - </span>
                        <input type="hidden" min="0" max="100" step="0.1" name="results.{{i}}.flags.better-rolltables.brt-percentage-high-value" value="{{result.flags.better-rolltables.brt-percentage-high-value}}" placeholder="100" data-dtype="Number"/>
                        <input type="text" name="results.{{i}}.rangeH" value="{{result.range.[1]}}" placeholder="H" data-dtype="Number"/>
                    </td>
                {{/if}}

                {{#if @root.owner}}
                <td class="result-controls">
                    <a class="lock-result" title="{{ localize "TABLE.ToggleDrawn" }}">
                        <i class="fas {{#if result.drawn}}fa-lock{{else}}fa-unlock{{/if}} fa-fw"></i>
                    </a>
                    <input type="hidden" name="results.{{i}}.drawn" value="{{result.drawn}}" data-dtype="Boolean"/>
                    <a class="delete-result" title="{{ localize "TABLE.ResultDelete" }}">
                        <i class="fas fa-trash fa-fw"></i>
                    </a>
					{{#if result.isText}}
                        <a class="rich-edit-result" data-tooltip="{{localize 'better-rolltables.label.RichEdit.ButtonHint'}}" data-tooltip-direction="UP">
                            <i class="fa-solid fa-file-contract fa-fw"></i>
                        </a>
					{{else if result.isDocument}}
                        <a class="edit-result" title="{{ localize "better-rolltables.label.editResult" }}">
                            <i class="fas fa-pencil-alt fa-fw"></i>
                        </a>
					{{else if result.isCompendium}}
                        <a class="edit-result" title="{{ localize "better-rolltables.label.editResult" }}">
                            <i class="fas fa-pencil-alt fa-fw"></i>
                        </a>
					{{/if}}
                </td>
                {{/if}}
            </tr>
                {{/each}}
            </tbody>
        </table>
    </section>

    <!-- Roll Table Footer -->
    <footer class="sheet-footer flexrow">
        {{#if (eq @root.tableType "loot")}}
        <button id="BRT-gen-loot" class="generate" type="button" data-tooltip='{{localize 'better-rolltables.Buttons.GenerateLootTooltip'}}' data-tooltip-direction='UP'><i class="fas fa-coins"></i>{{localize "better-rolltables.Buttons.GenerateLoot"}}</button>
        <button id="BRT-gen-loot-token" class="generate" type="button" data-tooltip='{{localize 'better-rolltables.Buttons.GenerateLootTokenTooltip'}}' data-tooltip-direction='UP'><i class="fa-solid fa-user-group"></i>{{localize "better-rolltables.Buttons.GenerateLootToken"}}</button>
        {{/if}}
        {{#if (eq @root.tableType "harvest")}}
        <button id="BRT-gen-harvest" class="generate" type="button" data-tooltip='{{localize 'better-rolltables.Buttons.GenerateHarvestTooltip'}}' data-tooltip-direction='UP'><i class="fas fa-coins"></i>{{localize "better-rolltables.Buttons.GenerateHarvest"}}</button>
        <button id="BRT-gen-harvest-token" class="generate" type="button" data-tooltip='{{localize 'better-rolltables.Buttons.GenerateHarvestTokenTooltip'}}' data-tooltip-direction='UP'><i class="fa-solid fa-user-group"></i>{{localize "better-rolltables.Buttons.GenerateHarvestToken"}}</button>
        {{/if}}
        {{#if @root.owner}}
        <button class="submit" type="submit" data-tooltip='{{localize 'better-rolltables.label.betterRolltableUpdateTooltip'}}' data-tooltip-direction='UP'><i class="fas fa-save"></i> {{ localize "TABLE.Update" }}</button>
        <button class="reset" type="button" data-tooltip='{{localize 'better-rolltables.label.betterRolltableResetTooltip'}}' data-tooltip-direction='UP'><i class="fas fa-undo"></i> {{ localize "TABLE.Reset" }}</button>
        {{/if}}
        <button class="roll" type="button"><i class="fas fa-dice-d20"></i> {{ localize "TABLE.Roll" }}</button>
        {{#if (eq @root.tableType "better")}}
        <button class="better-rolltables-roll-better" type="button" data-tooltip='{{localize 'better-rolltables.label.betterRolltableRollPlusTooltip'}}' data-tooltip-direction='UP'>
            <i class="fa-solid fa-dice"></i> {{ localize "better-rolltables.label.betterRolltableRollPlus" }}
        </button>
        {{/if}}
        {{#if (eq @root.tableType "loot")}}
        <button class="better-rolltables-roll-loot" type="button" data-tooltip='{{localize 'better-rolltables.label.betterRolltableRollPlusTooltip'}}' data-tooltip-direction='UP'>
            <i class="fas fa-gem"></i>{{localize "better-rolltables.label.betterRolltableRollPlus"}}
        </button>
        {{/if}}
        {{#if (eq @root.tableType "story")}}
        <button class="better-rolltables-roll-story" type="button" data-tooltip='{{localize 'better-rolltables.label.betterRolltableRollPlusTooltip'}}' data-tooltip-direction='UP'>
            <i class="fas fa-book"></i>{{localize "better-rolltables.label.betterRolltableRollPlus"}}
        </button>
        {{/if}}
        {{#if (eq @root.tableType "harvest")}}
        <button class="better-rolltables-roll-harvest" type="button" data-tooltip='{{localize 'better-rolltables.label.betterRolltableRollPlusTooltip'}}' data-tooltip-direction='UP'>
            <i class="fa-solid fa-wheat-awn-circle-exclamation"></i>{{localize "better-rolltables.label.betterRolltableRollPlus"}}
        </button>
        {{/if}}
    </footer>
</form>
